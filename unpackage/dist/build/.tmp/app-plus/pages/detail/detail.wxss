
.content {
	background-color: #ffffff;
}
.swiper-box {
	height: 400rpx;
}
.swiper-item {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	    -ms-flex-pack: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	height: 100%;
	background: #eee;
	color: #fff;
}
.swiper-item image {
	width: 100%;
	height: 100%;
}
.detail-state,
.dated {
	text-align: center;
	display: inline-block;
	width: 96rpx;
	height: 46rpx;
	background-color: #fcf1e1;
	line-height: 46rpx;
	color: #e89827;
	font-size: 24rpx;
	border-radius: 6rpx;
}
.dated {
	background: rgba(240, 240, 240, 1);
	color: #ADADAD;
}
.detail-date {
	font-size: 24rpx;
	margin-left: 1rem;
	color: #888888;
	letter-spacing: 1rpx;
}
.detail-coordinates {
	width: 100%;
}
.empty {
	margin: 20rpx auto;
	width: 678rpx;
	height: 1px;
	background: rgba(235, 235, 235, 1);
}
.gray {
	height: 18rpx;
	width: 100%;
	background-color: #f5f5f5;
}
.detail-coordinates image:nth-child(1) {
	float: right;
	width: 56rpx;
	height: 56rpx;
	margin-top: 60rpx;
	margin-right: 20rpx;
}
.detail-coordinates image:nth-child(2) {
	float: right;
	width: 28rpx;
	height: 32rpx;
	margin-top: 70rpx;
	margin-right: 50rpx;
}
.detail-address {
	padding: 0.2rem 0;
	margin-left: 1rem;
}
.detail-address image {
	width: 28rpx;
	height: 24rpx;
}
.detail-address ._span {
	font-size: 30rpx;
	color: #333333;
	letter-spacing: 1rpx;
	margin-left: 10rpx;
}
.detail-address ._span:nth-child(3) {
	margin-left: 100rpx;
}
.detail-content {
	display: inline-block;
	width: 45%;
}
.content-left,
.content-right {
	display: inline-block;
	width: 130rpx;
	font-size: 26rpx;
	color: #adadad;
	margin-left: 1rem;
	margin-bottom: 0.5rem;
}
.detail-configuration {
	margin: 18rpx 0;
}
.configuration {
	font-size: 30rpx;
	color: #adadad;
	display: inline-block;
	width: 20%;
	margin-left: 1rem;
	height: 68rpx;
	line-height: 68rpx;
	vertical-align: top;
}
.configuration-content {
	margin-right: 0.5rem;
	font-size: 30rpx;
	color: #333333;
	display: inline-block;
	width: 68%;
	line-height: 68rpx;
}
.detail-houseUser {
	margin-bottom: 0.5rem;
}
.detail-houseUser ._p {
	font-size: 32rpx;
	padding: 0.5rem;
	padding-left: 1rem;
}
.houseUser {
	width: 100%;
	/* height: 116upx; */
}
.houseUser image {
	vertical-align: middle;
	margin-left: 1.5rem;
	width: 116rpx;
	height: 116rpx;
}
.houseUser ._span {
	font-size: 30rpx;
	color: #09b8b5;
	line-height: 116rpx;
	margin-left: 0.5rem;
}
.detail-pretend {
	white-space: nowrap;
	overflow-x: auto;
	margin-bottom: 20rpx;
}
.detail-pretend ._p {
	font-size: 32rpx;
	padding: 0.5rem;
	padding-left: 1rem;
}
.pretend {
	text-align: center;
	height: 116rpx;
	display: inline-block;
}
.pretend-img {
	margin-left: 1.5rem;
	width: 116rpx;
	height: 116rpx;
}
.pretend-name {
	margin-left: 1.5rem;
	font-size: 26rpx;
}
.detail-contract {
	height: 100rpx;
	line-height: 100rpx;
}
.detail-contract ._span {
	font-size: 32rpx;
	margin-left: 1rem;
	color: #999;
}
.detail-contract ._a {
	font-size: 32rpx;
	display: inline-block;
	float: right;
	margin-right: 1rem;
	color: #09b8b5;
}
.landlordname {
	font-size: 26rpx;
	margin-left: 50rpx
}
._span.rightIcon{
	display:inline-block;
	vertical-align: middle;
	width:20rpx;
	height:20rpx;
	border-top:1rpx solid #ccc;
	border-right:1rpx solid #ccc;
	margin-left:16rpx;
	margin-bottom:7rpx;
	transform:rotate(45deg);
	-ms-transform:rotate(45deg); /* IE 9 */
	-webkit-transform:rotate(45deg); /* Safari and Chrome */
}

