.input-alipay {
  width: 100%;
  margin-top: 5%;
}
.input-alipay .input-item {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    background: white;
    border-bottom: 1rpx solid #eeeeee;
    line-height: 100rpx;
    height: 100rpx;
}
.input-alipay .input-item .input-label {
      width: 186rpx;
      font-size: 32rpx;
      margin-left: 5%;
}
.input-alipay .input-item .input-body {
      position: relative;
      height: 100rpx;
      width: 100%;
}
.input-alipay .input-item .input-body .input {
        line-height: 100rpx;
        height: 100rpx;
        position: relative;
        font-size: 28rpx;
        width: 430rpx;
}
.input-alipay .input-item .input-body .btn-code {
        position: absolute;
        right: 0rpx;
        top: 50%;
        -webkit-transform: translateY(-50%);
            -ms-transform: translateY(-50%);
                transform: translateY(-50%);
        background: none;
        color: #205592;
        width: 160rpx;
        font-size: 24rpx;
        -webkit-box-sizing: border-box;
                box-sizing: border-box;
        text-align: right;
        padding: 0;
        height: 100rpx;
        line-height: 100rpx;
}
