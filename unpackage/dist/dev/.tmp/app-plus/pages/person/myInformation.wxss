
.person-list {
	background-color: #ffffff;
	margin: 20rpx 0;
}
.common-left {
	display: inline-block;
	width: 30%;
	height: 80rpx;
	font-size: 32rpx;
	background-color: #ffffff;
	line-height: 80rpx;
}
.common-text {
	position: absolute;
	left: 50rpx;
}
.common-right {
	position: absolute;
	display: inline-block;
	width: 70%;
	height: 80rpx;
	background-color: #ffffff;
	border-color: transparent;
	text-align: right;
	font-size: 32rpx;
}
.common-right input {
	height: 60rpx;
	position: absolute;
	right: 30rpx;
	top: 10rpx;
}
.picture {
	width: 100%;
	background-color: #ffffff;
	height: 338rpx;
	position: relative;
}
.picture-title {
	display: block;
	padding-top: 20rpx;
	margin-left: 50rpx;
	color: #999999;
	font-size: 32rpx;
	font-weight: 500;
}
.upload-pos {
	position: absolute;
	width: 328rpx;
	height: 204rpx;
	left: 50rpx;
	top: 100rpx;
}
.upload-opp {
	position: absolute;
	top: 100rpx;
	width: 328rpx;
	height: 204rpx;
	right: 30rpx;
}

