
.uni-padding-wrap{
	background-color: #F5F5F5;
	height: 100%;
}
.top{
	height: 240rpx;
	width: 100%;
	background-color: #2CC3BE;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	    -ms-flex-direction: row;
	        flex-direction: row;
}
.top>view{
	width: 49%;
	height: 100rpx;
	margin: auto 0;
	color: #fff;
	text-align: center;
}
.top>view>._p{
	font-size: 28rpx;
	color: #77EDEB;
}
.top>view>._span{
	line-height: 100rpx;
	font-size: 46rpx;
	font-weight: bold;
}
.top>view:first-child{
	border-right:1px solid #6CD9D7;
}
.deposit{
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	    -ms-flex-direction: row;
	        flex-direction: row;
	background: #fff;
}
.deposit>view{
	background: #fff;
	height: 180rpx;
	line-height: 180rpx;
	padding-left:40rpx;
}
.deposit>view:first-child{
	width: 60%;
}
.deposit>view>._span{
	color: #F69D1F;
	margin-left: 20rpx;
}
.deposit>view>button{
	color: #11D6D3;
	background-color: #fff;
	border:1px solid #11D6D3;
	-webkit-border-radius: 5rpx;
	        border-radius: 5rpx;
	padding: 6rpx 40rpx;
	margin-top: 50rpx;
}
.rent{
	padding: 60rpx 40rpx;
}
.rent_top>._span:last-child{
	color: #BBBBBB;
	float: right;
}
.list ._li{
	margin-top: 30rpx;
	height: 200rpx;
	background: #fff;
	position: relative;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	    -ms-flex-direction: row;
	        flex-direction: row;
	-webkit-box-align:center;
	-webkit-align-items:center;
	    -ms-flex-align:center;
	        align-items:center;
}
.topleft {
	width: 0;
	height: 0;
	border-top: 100rpx solid #F5D77F;
	border-right: 100rpx solid transparent;
	position: absolute;
	left: 0;
	top: 0;
}
.topleft_span{
	position: absolute;
	left: 10rpx;
	top: 10rpx;
	color: #fff;
	font-size: 28rpx;
}
.center{
	margin-left: 90rpx;
}
.list ._li button{
	float: right;
	background-color: #12CDDE;
	padding: 6rpx 30rpx;
	color: #fff;
	margin-right: 20rpx;
}
.list ._li view{
	height: 100rpx;
}
.list ._li view>._span{
	font-size: 50rpx;
	font-weight: bold;
	color: #333333;
}
.list ._li view>._p{
	color: #333;
	font-size: 28rpx;
}
.middle-content{
	width: 500rpx;
	/* height: 500upx; */
	overflow-y: auto;
	font-size: 32rpx;
	padding: 20rpx 0;
}
.middle-title{
	height: 80rpx;
	width: 100%;
	line-height: 80rpx;
	border-bottom: 1px solid #ddd;
	text-align: center;
}
.middle-btn>button{
	background-color: #11D6D3;
	color: #fff;
	width: 460rpx;
}
.middle-title>uni-icon{
	float: left;
	margin-top: 10rpx;
	margin-left: 20rpx;
}
.middle-title>._span{
	float: right;
	color: #09B8B5;
	font-size: 32rpx;
	margin-right: 40rpx;
}
.select_payment ._li{
	width: 80%;
	margin: 0 auto;
	border-bottom: 1px solid #ddd;
	text-align: left;
	padding:10rpx 0;
}
.select_payment ._li:first-child{
	padding-bottom:0;
}
.select_payment ._li image{
	width: 80rpx;
	float: left;
	margin-top: 10rpx;
}
.select_payment ._li ._span{
	display: inline-block;
	margin-left: 30rpx;
	line-height: 80rpx;
}
.select_payment ._li .radio{
	float: right;
}
.select_payment ._li ._span ._p{
	height: 0;
	font-size: 28rpx;
	color: #999999;
}

