
.add {
	text-align: center;
	display: block;
	margin: auto;
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	width: 300rpx;
	height: 350rpx;
}
.img-people {
	width: 169rpx;
	height: 169rpx;
	position: relative;
	display: block;
	margin: auto;
	vertical-align: middle;
}
.add-people {
	width: 224rpx;
	height: 88rpx;
	background: #11d6d3;
	-webkit-border-radius: 4rpx;
	        border-radius: 4rpx;
	font-size: 32rpx;
	line-height: 88rpx;
}
.people {
	height: 206rpx;
	width: 100%;
	background-color: #ffffff;
	margin: 10rpx;
	line-height: 206rpx;
	overflow: hidden;
}
.people-url {
	width: 116rpx;
	height: 116rpx;
	vertical-align: middle;
	margin: 0 20rpx;
}
.people-text {
	font-size: 32rpx;
	font-weight: bold;
	color: rgba(51, 51, 51, 1);
}
.people-text text {
	font-weight: 500;
	color: rgba(153, 153, 153, 1);
	margin-left: 20rpx;
}
.people-delete {
	height: 48rpx;
	width: 69rpx;
	vertical-align: middle;
	float: right;
	margin-top: 79rpx;
	margin-right: 50rpx;
}

