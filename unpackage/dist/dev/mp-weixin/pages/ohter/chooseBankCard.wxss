
.cards{
	   width:578rpx;
	   height:224rpx;
	   -webkit-border-radius:20rpx;
	           border-radius:20rpx;
	   background:#2CC3BE;
	   margin:36rpx auto 0;
	   color:#fff;
	   padding:38rpx 50rpx;
}
.bankName{
	   font-size:34rpx;
	   font-weight:bold;
	   height:50rpx;
}
.chosenIcon{
	   width:50rpx;
	   height:50rpx;
	   vertical-align: middle;
	   float:right;
}
.bankType{
	   font-size:28rpx;
	   margin-top:20rpx;
}
.cardNumber{
	   font-size:50rpx;
	   margin-top:50rpx;
}
.cardNumber>text{
	   margin-right:40rpx;
}
.addCard{
	   width:100%;
	   height:126rpx;
	   text-align: center;
	   color:#333333;
	   background:#fff;
	   font-size:30rpx;
	   position:fixed;
	   bottom: 0;
	   border-top:2rpx solid #ccc;
	   padding-top:12rpx;
}
.addCard>image{
	   width:66rpx;
	   height:66rpx;   
	   margin-top:10rpx;
}

